<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="djtboia.theoooapp.MainActivity"

    >

    <RelativeLayout
        android:layout_height="400dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_dropdown"
            android:layout_marginBottom="58dp"
            android:layout_above="@+id/btnPlay"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_an_ooo_from_the_drop_down_and_press_play"
            android:id="@+id/OooLabel"
            android:layout_marginTop="57dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Pause"
            android:layout_width="100dp"
            android:id="@+id/btnPause"
            android:background="@android:color/holo_purple"
            android:layout_height="30dp"
            android:layout_below="@+id/spinner_dropdown"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Play"
            android:layout_marginBottom="49dp"
            android:id="@+id/btnPlay"
            android:background="@android:color/holo_green_dark"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Stop"
            android:layout_width="100dp"
            android:id="@+id/btnStop"
            android:background="@android:color/holo_red_light"
            android:layout_height="30dp"
            android:layout_below="@+id/spinner_dropdown"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
